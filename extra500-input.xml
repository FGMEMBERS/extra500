<PropertyList>

	<mice>
		<mouse>
			<mode n="1">
				<y-axis>
					<binding>
						<factor type="double">-2</factor>
					</binding>
				</y-axis>
			</mode>
		</mouse>
	</mice>

	 <keyboard>
		 
		 <key n="6">
			 <!-- toggle stick-fixed/loose -->
			 <name>CRTL-F</name>
			 <desc>Toggle stick fixed</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script>e1.bitswap("fdm/jsbsim/state/controls-fixed")</script>                        
			 </binding>
		 </key>

		 <key n="99">
			 <name>c</name>
			 <desc>CWS</desc>
    				<binding>
      				<command>nasal</command>
      				<script><![CDATA[
						UI.click("Autopilot CWS on");
					]]></script>
    				</binding>
				<mod-up>
    				<binding>
      				<command>nasal</command>
      				<script><![CDATA[
						UI.click("Autopilot CWS off");
					]]></script>
    				</binding>
				</mod-up>
		 </key>

		 <key n="100">
			 <name>d</name>
			 <desc>disconnect AP</desc>
    				<binding>
      				<command>nasal</command>
      				<script><![CDATA[
						UI.click("Autopilot disengage on");
					]]></script>
    				</binding>
				<mod-up>
    				<binding>
      				<command>nasal</command>
      				<script><![CDATA[
						UI.click("Autopilot disengage off");
					]]></script>
    				</binding>
				</mod-up>
		 </key>

		 <key n="114">
			 <name>r</name>
			 <desc>Toggle prop beta range</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script><![CDATA[
					UI.click("Engine reverser");
				]]></script> 
			 </binding>
		 </key>

		 <key n="115"> 
			 <!-- toggle engine cutoff-->
			 <name>s</name>
			 <desc>Toggle engine cutoff</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script><![CDATA[
					UI.click("Engine cutoff");
				]]></script>
			 </binding>
		 </key>

		 <key n="119">
			 <name>w</name>
			 <desc>gear warn mute</desc>
			 <repeatable type="bool">false</repeatable>
    				<binding>
      			<command>nasal</command>
     					 <script><![CDATA[
						UI.click("Gear Clear Horn on");
					]]></script>
    				</binding>
				<mod-up>
    					<binding>
      				<command>nasal</command>
      					<script><![CDATA[
							UI.click("Gear Clear Horn off");
						]]></script>
    					</binding>
				</mod-up>
		 	</key>
		 
		 <key n="5">
			 <name>Ctrl-e</name>
			 <desc>Toggle Ground External Power Generator</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script><![CDATA[
					UI.click("Ground External Power Generator");
				]]></script>
			 </binding>
		 </key>
		 <key n="267">
			 <name>F11</name>
			 <desc>Pop up autopilot dialog</desc>
			 <binding>
				 <command>nasal</command>
				 <script>Dialogs.autopilot.open()</script>
			 </binding>
		 </key>
		 <key n="268">
			 <name>F12</name>
			 <desc>Pop up radios dialog</desc>
			 <binding>
				 <command>nasal</command>
				 <script>Dialogs.radios.open()</script>
			 </binding>
		 </key>
            
		 
		 <!-- keys only for development -->

		 <!--key n="32">
			 <name>space</name>
			 <desc>reload-model</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>reinit</command>
				 <subsystem>aircraft-model</subsystem>
			 </binding>
		 </key>
		 <key n="119">
			 <name>w</name>
			 <desc>run simulation cycle once</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					run.simulationLoop.step();
				]]></script>
			 </binding>
		 </key-->
		 <key n="87">
			 <name>W</name>
			 <desc>run simulation cycle continous</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					run.simulationLoop.start();
				]]></script>
			 </binding>
		 </key>
		 <key n="113">
			 <name>q</name>
			 <desc>Debug output on</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Part.etd.on = 1;
					Dialogs.debug_electric.open();
				]]></script>
			 </binding>
		 </key>
		 <key n="81">
			 <name>Q</name>
			 <desc>Debug output off</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Part.etd.on = 0;
					Dialogs.debug_electric.close();
				]]></script>
			 </binding>
		 </key>
