<PropertyList>

	 <keyboard>
		 
		 <key n="6">
			 <!-- toggle stick-fixed/loose -->
			 <name>CRTL-F</name>
			 <desc>Toggle stick fixed</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script>e1.bitswap("fdm/jsbsim/state/controls-fixed")</script>                        
			 </binding>
		 </key>

		 <key n="114">
			 <!-- toggle prop beta range WOULD LIKE TO USE r HERE, but is taken below!!!
				there it is :-)
			 -->
			 <name>r</name>
			 <desc>Toggle prop beta range</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <!--<script>e1.bitswap("controls/engines/engine[0]/reverser")</script>-->
				 <script><![CDATA[
					UI.click("Engine reverser");
				]]></script> 
			 </binding>
		 </key>

		 <key n="3">
			 <!-- toggle engine cutoff-->
			 <name>Ctrl-c</name>
			 <desc>Toggle engine cutoff</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <!--<script>e1.cutoff()</script> -->
				 <script><![CDATA[
					UI.click("Engine cutoff");
				]]></script>
			 </binding>
		 </key>
		 
		 <key n="5">
			 <name>Ctrl-e</name>
			 <desc>Toggle Ground External Power Generator</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script><![CDATA[
					UI.click("Ground External Power Generator");
				]]></script>
			 </binding>
		 </key>
		 <key n="267">
			 <name>F11</name>
			 <desc>Pop up autopilot dialog</desc>
			 <binding>
				 <command>nasal</command>
				 <script>Dialogs.autopilot.open()</script>
			 </binding>
		 </key>
            
		 
		 <!-- keys only for development -->
		 <key n="32">
			 <name>space</name>
			 <desc>reload-model</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>reinit</command>
				 <subsystem>aircraft-model</subsystem>
			 </binding>
		 </key>
		 <key n="119">
			 <name>w</name>
			 <desc>run simulation cycle once</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					run.cycle_run = 0;
					run.simulation_cycle();
				]]></script>
			 </binding>
		 </key>
		 <key n="87">
			 <name>W</name>
			 <desc>run simulation cycle continous</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					run.cycle_run = 1;
				]]></script>
			 </binding>
		 </key>
		 <key n="113">
			 <name>q</name>
			 <desc>Debug output on</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Part.etd.on = 1;
					Dialogs.debug_electric.open();
				]]></script>
			 </binding>
		 </key>
		 <key n="81">
			 <name>Q</name>
			 <desc>Debug output off</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Part.etd.on = 0;
					Dialogs.debug_electric.close();
				]]></script>
			 </binding>
		 </key>
		 <key n="357">
			 <name>up</name>
			 <desc>Engineer Screen on</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Dev.engineerScreen.open();
				]]></script>
			 </binding>
		 </key>
		 <key n="359">
			 <name>down</name>
			 <desc>Engineer Screen off</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Dev.engineerScreen.close();
				]]></script>
			 </binding>
		 </key>
		 <key n="358">
			 <name>right</name>
			 <desc>Engineer Screen next page</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Dev.engineerScreen.browse(1);
				]]></script>
			 </binding>
		 </key>
		 <key n="356">
			 <name>left</name>
			 <desc>Engineer Screen previous page</desc>
			 <repeatable type="bool">false</repeatable>
			 <binding>
				 <command>nasal</command>
				 <script><![CDATA[
					Dev.engineerScreen.browse(-1);
				]]></script>
			 </binding>
		 </key>
	 </keyboard> 

</PropertyList>
