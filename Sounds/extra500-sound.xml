			<property>sim/sound/click[1]</property>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
	</switch>
	
	<switch>
		<name>switch2</name>
		<mode>once</mode>
		<path>Aircraft/extra500/Sounds/click2.wav</path>
		<condition>
			<property>sim/sound/click[2]</property>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
	</switch>
	
	<switch>
		<name>switch3</name>
		<mode>once</mode>
		<path>Aircraft/extra500/Sounds/click3.wav</path>
		<condition>
			<property>sim/sound/click[3]</property>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
	</switch>
	
	<switch>
		<name>switch4</name>
		<mode>once</mode>
		<path>Aircraft/extra500/Sounds/click4.wav</path>
		<condition>
			<property>sim/sound/click[4]</property>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
	</switch>

        
	</fx>
</PropertyList>