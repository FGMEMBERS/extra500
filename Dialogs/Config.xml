		<text>
			<row>4</row><col>0</col>
			<label>ELT</label>
		</text>
		<group>
			<row>4</row><col>1</col>
			<layout>hbox</layout>
			<checkbox>
				<name>msg_ELT</name>
				<label>over multiplayer chat</label>
				<property>/extra500/config/ui/elt</property>
