<PropertyList>
	<name>extra500_Config</name>
	<modal>false</modal>
	<layout>vbox</layout>
	<group>
		<layout>hbox</layout>
		
		
		<text>
			<label>Extra 500 Configuration</label>
		</text>
		
		<empty><stretch>1</stretch></empty>
		
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<default>1</default>
			<keynum>267</keynum>
			<border>2</border>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule/>
	<group>
		<layout>table</layout>
		<text>
			<row>0</row><col>0</col>
			<label>Messages</label>
		</text>
		<group>
			<row>0</row><col>1</col>
			<layout>hbox</layout>
			<checkbox>
				<name>msg_failure</name>
				<label>failure</label>
				<property>/extra500/config/ui/failure</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>msg_failure</object-name>
				</binding>
			</checkbox>
			<checkbox>
				<name>msg_warning</name>
				<label>warning</label>
				<property>/extra500/config/ui/warning</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>msg_warning</object-name>
				</binding>
			</checkbox>
			<checkbox>
				<name>msg_caution</name>
				<label>caution</label>
				<property>/extra500/config/ui/caution</property>
				<live>true</live>
