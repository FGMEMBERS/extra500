	<hrule/>
	<group>
		<layout>vbox</layout>
		<text>
			<label>IFD realism</label>
		</text>
		<group>
			<layout>table</layout>
			<text>
				<row>0</row><col>0</col>
				<label>Boot Intervall</label>
			</text>
			<text>
				<row>0</row><col>1</col>
				<width>100</width>
				
				<label>fast</label>
			</text>
			<slider>
				<row>0</row><col>2</col>
				<width>200</width>
				<property>/extra500/config/ifd/bootIntervall</property>
				<step>0.05</step>
				<pagestep>0.1</pagestep>
				<fraction>0.05</fraction>
				<min>0.05</min>
				<max>1.0</max>
				<binding>
					<command>dialog-apply</command>
				</binding>
			</slider>
			<text>
				<row>0</row><col>3</col>
				<width>100</width>
				
				<label>real</label>
			</text>
			<text>
				<row>0</row><col>4</col>
				<label>9.99 sec </label> <!-- placeholder for width -->
				<live>true</live>
				<format>%-0.2f sec</format>
				<property>/extra500/config/ifd/bootIntervall</property>
			</text>
			
			
		</group>
	</group>
	<hrule/>
	<group>
			<layout>table</layout>
			<text>
				<row>0</row><col>0</col>
				<halign>center</halign>
				<label>Quick zoom view</label>
			</text>
			<input>
				<row>1</row><col>0</col>
				<name>quickZoom_Field</name>
				<width>150</width>
				<height>25</height>
				<label>Field of View</label>
				<live>true</live>
				<property>/extra500/config/view/quickZoom/field-of-view</property>
				<binding>
					<command>dialog-apply</command>
					<object-name>quickZoom_Field</object-name>
				</binding>
			</input>
			<input>
				<row>2</row><col>0</col>
				<name>quickZoom_heading</name>
				<width>150</width>
				<height>25</height>
				<label>Heading</label>
				<live>true</live>
				<property>/extra500/config/view/quickZoom/goal-heading-offset-deg</property>
				<binding>
					<command>dialog-apply</command>
					<object-name>quickZoom_heading</object-name>
				</binding>
			</input>
			<input>
				<row>3</row><col>0</col>
				<name>quickZoom_pitch</name>
				<width>150</width>
				<height>25</height>
				<label>Pitch</label>
				<live>true</live>
				<property>/extra500/config/view/quickZoom/goal-pitch-offset-deg</property>
				<binding>
					<command>dialog-apply</command>
					<object-name>quickZoom_pitch</object-name>
				</binding>
			</input>
	</group>
        <hrule/>
	<group>
			<layout>table</layout>
			<text>
				<row>0</row><col>0</col>
				<halign>right</halign>
				<label>Dialog</label>
			</text>
                        <text>
				<row>0</row><col>1</col>
				<halign>center</halign>
				<label>Scale Factor</label>
			</text>
                        
                        <text>
				<row>1</row><col>0</col>
				<halign>right</halign>
				<label>Fuel and Payload</label>
			</text>
                        <text>
				<row>1</row><col>1</col>
				<width>100</width>
				
				<label>half</label>
			</text>
			<slider>
				<row>1</row><col>2</col>
				<width>200</width>
				<property>/extra500/config/dialog/fuelpayload/scale</property>
				<step>0.05</step>
				<pagestep>0.1</pagestep>
				<fraction>0.05</fraction>
				<min>0.5</min>
				<max>1.0</max>
				<binding>
					<command>dialog-apply</command>
				</binding>
			</slider>
                        <text>
				<row>1</row><col>3</col>
				<width>100</width>
				
				<label>full</label>
			</text>
			<text>
				<row>1</row><col>4</col>
				<label>9.99 sec </label> <!-- placeholder for width -->
				<live>true</live>
				<format>%-0.2f</format>
				<property>/extra500/config/dialog/fuelpayload/scale</property>
			</text>
                        
			<text>
				<row>2</row><col>0</col>
				<halign>right</halign>
				<label>Failure</label>
			</text>
                        <text>
				<row>2</row><col>1</col>
				<width>100</width>
				
				<label>half</label>
			</text>
			<slider>
				<row>2</row><col>2</col>
				<width>200</width>
				<property>/extra500/config/dialog/failure/scale</property>
				<step>0.05</step>
				<pagestep>0.1</pagestep>
				<fraction>0.05</fraction>
				<min>0.5</min>
				<max>1.0</max>
				<binding>
					<command>dialog-apply</command>
				</binding>
			</slider>
                        <text>
				<row>2</row><col>3</col>
				<width>100</width>
				
				<label>full</label>
			</text>
			<text>
				<row>2</row><col>4</col>
				<label>9.99 sec </label> <!-- placeholder for width -->
				<live>true</live>
				<format>%-0.2f</format>
				<property>/extra500/config/dialog/failure/scale</property>
			</text>
	</group>
	<hrule/>
	<group>
		<layout>table</layout>
		<text>
			<row>0</row><col>0</col>
			<label>Livery high resolution</label>
		</text>
		<group>
			<row>0</row><col>1</col>
			<layout>hbox</layout>
			<checkbox>
				<name>livery_res_player</name>
				<label>Player</label>
				<property>/extra500/config/livery/resolution</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>livery_res_player</object-name>
				</binding>
			</checkbox>
			<checkbox>
				<name>livery_res_multiplayer</name>
				<label>AI Multiplayer</label>
				<property>/extra500/config/livery/resolution-ai</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>livery_res_multiplayer</object-name>
				</binding>
			</checkbox>
			<empty><stretch>1</stretch></empty>
		</group>
	</group>
</PropertyList>
