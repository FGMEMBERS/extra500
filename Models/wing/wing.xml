<!-- Ailerons -->

<animation>
  <type>rotate</type>
  <object-name>AilRH</object-name>
  <property>surface-positions/left-aileron-pos-norm</property>
  <interpolation>
   <entry><ind>-1</ind><dep>19</dep></entry>
   <entry><ind> 0</ind><dep>  0</dep></entry>
   <entry><ind> 1</ind><dep>-27</dep></entry>
  </interpolation>   
  <axis>
    <x1-m>0.615</x1-m>
    <y1-m>4.4</y1-m>
    <z1-m>-0.16</z1-m>
    <x2-m>0.653</x2-m>
    <y2-m>5.5</y2-m>
    <z2-m>-0.16</z2-m>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>AilLH</object-name>
  <property>surface-positions/left-aileron-pos-norm</property>
  <interpolation>
   <entry><ind>-1</ind><dep>27</dep></entry>
   <entry><ind> 0</ind><dep>  0</dep></entry>
   <entry><ind>1</ind><dep>-19</dep></entry>
  </interpolation>   
  <axis>
    <x1-m>0.615</x1-m>
    <y1-m>-4.4</y1-m>
    <z1-m>-0.16</z1-m>
    <x2-m>0.653</x2-m>
    <y2-m>-5.5</y2-m>
    <z2-m>-0.16</z2-m>
  </axis>
</animation>

<!-- Flaps -->

