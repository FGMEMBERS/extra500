<PropertyList>

<path>Aftnav.ac</path>

    <animation>
	  <type>range</type>
	  <min-m>0</min-m>
	  <max-m>10000</max-m>
    </animation>

    <animation>
        <type>alpha-test</type>
        <alpha-factor>0.01</alpha-factor>
    </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>strobe</object-name>
  </effect>

<animation>
  <type>billboard</type>
  <object-name>strobe</object-name>
  <spherical type="bool">true</spherical>
 </animation>

  <animation>
    <type>dist-scale</type>
    	<object-name>strobe</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0.1</dep>
      </entry>
      <entry>
        <ind>300</ind>
        <dep>0.2</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>.5</dep>
      </entry>
      <entry>
        <ind>4000</ind>
        <dep>1.5</dep>
      </entry>
      <entry>
        <ind>10000</ind>
        <dep>2.5</dep>
      </entry>
    </interpolation>
  </animation>

  <animation>
    	<object-name>strobe</object-name>
  	<type>select</type>
    	<condition>
        	<property>sim/multiplay/generic/int[3]</property>
    	</condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>strobe</object-name>
    <condition>
        <property>sim/multiplay/generic/int[3]</property>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

</PropertyList>
