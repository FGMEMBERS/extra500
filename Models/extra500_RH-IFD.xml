<PropertyList>

<path>extra500_RH-IFD.ac</path>

<!--Dimming Test -->
<animation>
        <type>material</type>
        <object-name>RH-IFD.Screen</object-name>
		<condition>
		<equals>
		<property>extra500/SidePanel/Light/Instrument/state</property>
		<value>1</value>
		</equals>
	</condition>
        <emission>
            <red>.7</red>
            <green>.7</green>
            <blue>.7</blue>
            <factor-prop>extra500/MasterPanel/Dimming/Instrument/state</factor-prop>
        </emission>
</animation>

</PropertyList>

