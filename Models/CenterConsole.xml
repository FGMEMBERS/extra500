<PropertyList>

<path>CenterConsole.ac</path>

<model>
  <name>Keypad</name>
  <path>Aircraft/extra500/Models/instruments/Keypad.ac</path>
	<offsets>
		<x-m>0.33196</x-m>
		<y-m>0</y-m>	
		<z-m>-0.006</z-m>
	</offsets>
</model>

<!-- ParkingBrake -->
<animation>
  <type>translate</type>
  <object-name>ParkingBrake</object-name>
  <property>/extra500/panel/CenterConsole/Parkingbrake/state</property>
  <factor>-0.025</factor>
  <axis>
   <x1-m>0.41777</x1-m>
   <y1-m>0</y1-m>
   <z1-m>-0.13577</z1-m>
   <x2-m>0.36853</x2-m>
   <y2-m>0</y2-m>
   <z2-m>-0.15146</z2-m>
  </axis>
</animation>

<animation>
  <type>pick</type>
  <object-name>ParkingBrake</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
			<command>property-toggle</command>
			<property>/extra500/panel/CenterConsole/Parkingbrake/state</property>
	</binding>
  </action>
</animation>



<!-- PowerLever # muss pick noch erstellt werden ? # -->

<animation>
  <type>rotate</type>
  <object-name>PowerLever</object-name>
  <property>controls/engines/engine/throttle</property>
  <condition>
    <equals>
      <property>controls/engines/engine/reverser</property>
      <value>1</value>
    </equals>
  </condition>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-5</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-30</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>-1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>PowerLever</object-name>
  <property>controls/engines/engine/throttle</property>
  <condition>
    <equals>
      <property>controls/engines/engine/reverser</property>
      <value>0</value>
    </equals>
  </condition>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-5</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>30</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>-1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>PowerLever</object-name>
  <property>controls/engines/engine/reverser</property>
  <factor>0.02</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
</animation>

<!-- ConditionLever # muss pick noch erstellt werden ? # 
/controls/engines/engine[0]/condition-lever-norm is controlled by: 	
		/controls/engines/engine[0]/cutoff (press: s)
		/controls/engines/engine[0]/propeller-pitch (press: n/N)
in Systems/extra500-system-indication.xml-->
<animation>
  <type>rotate</type>
  <object-name>ConditionLever</object-name>
  <property>/controls/engines/engine[0]/condition-lever-norm</property>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>20</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-20</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>-1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>
</PropertyList>
