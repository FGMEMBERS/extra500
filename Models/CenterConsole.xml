<!-- gear warn mute -->
<animation>
  <type>translate</type>
  <object-name>OverSpeed</object-name>
  <property>/extra500/panel/CenterConsole/GearClearHorn/state</property>
  <factor>0.005</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>OverSpeed</object-name>
  
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("Gear Clear Horn on");
	]]></script>
    </binding>
	<mod-up>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("Gear Clear Horn off");
	]]></script>
    </binding>
	</mod-up>
  </action>
</animation>

<!-- PowerLever -->
<animation>
  <type>rotate</type>
  <object-name>PowerLever</object-name>
  <object-name>OverSpeed</object-name>
  <object-name>OverSpeed.Ring</object-name>
  <property>controls/engines/engine/throttle</property>
  <condition>
    <equals>
      <property>controls/engines/engine/reverser</property>
      <value>1</value>
    </equals>
  </condition>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-5.4</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-41.7</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>-1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>PowerLever</object-name>
  <object-name>OverSpeed</object-name>
  <object-name>OverSpeed.Ring</object-name>
  <property>controls/engines/engine/throttle</property>
  <condition>
    <equals>
      <property>controls/engines/engine/reverser</property>
      <value>0</value>
    </equals>
  </condition>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-5.4</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>40.5</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>-1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>PowerLever</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					UI.click("Engine reverser");
				]]>
			</script>
		</binding>
	</action>
</animation>

<animation>
  <type>translate</type>
  <object-name>PowerLever</object-name>
  <object-name>OverSpeed</object-name>
  <object-name>OverSpeed.Ring</object-name>
  <property>controls/engines/engine/reverser</property>
  <factor>0.02</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
</animation>

<!-- ConditionLever  
/controls/engines/engine[0]/condition-lever-norm is controlled by: 	
		/extra500/engine/cutoff (press: s)
		/controls/engines/engine[0]/propeller-pitch (press: n/N)
in Systems/extra500-system-indication.xml-->
<animation>
  <type>rotate</type>
  <object-name>ConditionLever</object-name>
  <property>/controls/engines/engine[0]/condition-lever-norm</property>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>22.7</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-18.2</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>-1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>ConditionLever</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					UI.click("Engine cutoff");
				]]>
			</script>
		</binding>
	</action>
	<!--action>
		<button>1</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					UI.click("Engine cutoff on");
				]]>
			</script>
		</binding>
	</action-->
</animation>


