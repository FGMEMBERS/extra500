<PropertyList>

<path>CenterConsole.ac</path>

<model>
  <name>Keypad</name>
  <path>Aircraft/extra500/Models/instruments/Keypad.xml</path>
	<offsets>
		<x-m>0.33196</x-m>
		<y-m>0</y-m>	
		<z-m>-0.006</z-m>
	</offsets>
</model>

<!-- Defrost -->
<animation>
  <type>translate</type>
  <object-name>Defrost.Knob</object-name>
  <object-name>Defrost.Axis</object-name>
  <property>/extra500/panel/CenterConsole/Defrost/state</property>
  <factor>-0.055</factor>
  <axis>
   <x1-m>0.41777</x1-m>
   <y1-m>0</y1-m>
   <z1-m>-0.13577</z1-m>
   <x2-m>0.36853</x2-m>
   <y2-m>0</y2-m>
   <z2-m>-0.15146</z2-m>
  </axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>Defrost.Knob</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					UI.click("Defrost");
				]]>
			</script>
		</binding>
	</action>
</animation>

