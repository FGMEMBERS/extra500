<PropertyList>
	
	<path>frame.ice.ac</path> 
	
	<!-- VStab ICE -->
	<animation>
		<object-name>ICE.VStab.front</object-name>
		<type>select</type>
		<condition>
			<greater-than>
				<property>/environment/aircraft-effects/frost-level-FuslageFront</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>ICE.VStab.front</object-name>
		<property>/environment/aircraft-effects/frost-level-FuslageFront</property>
		<factor>0.05</factor>
		<offset-m>0.00</offset-m>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<effect>
		<inherits-from>Aircraft/extra500/Models/Effects/extra500-ice</inherits-from>
		<object-name>ICE.VStab.front</object-name>
		<parameters>
			<frost-level><use>/environment/aircraft-effects/frost-level-FuslageFront</use></frost-level>
		</parameters>
	</effect>
	
