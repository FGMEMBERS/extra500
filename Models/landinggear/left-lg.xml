<PropertyList>

<path>left-lg.ac</path>

<!-- submodels -->
<model>
  <name>left-lockstrut</name>
  <path>Aircraft/extra500/Models/landinggear/left-lockstrut.xml</path>
	<offsets>
		<x-m>0.93376</x-m>
		<y-m>-0.23672</y-m>	
		<z-m>-1.18274</z-m>
	</offsets>
</model>

<model>
  <name>left-middle-strut</name>
  <path>Aircraft/extra500/Models/landinggear/left-middle-strut.xml</path>
	<offsets>
		<x-m>0.93154</x-m>
		<y-m>-0.61032</y-m>	
		<z-m>-1.17800</z-m>
	</offsets>
</model>

<!-- lockstrut rotation --> 
 <animation>
  <type>rotate</type>
  <object-name>left-lockstrut</object-name>
  <property>gear/gear[1]/position-norm</property>
  <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>44</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
  <axis>
	<x1-m>0</x1-m>
    <y1-m>-0.24247</y1-m>
    <z1-m>-1.18981</z1-m>
    <x2-m>1</x2-m>
    <y2-m>-0.24247</y2-m>
    <z2-m>-1.18981</z2-m>
  </axis>
  </animation>

<!-- lower part rotation --> 
 <animation>
  <type>rotate</type>
  <object-name>left-middle-strut</object-name>
  <property>gear/gear[1]/position-norm</property>
  <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>18</dep>
            </entry>
            <entry>
                <ind>0.5</ind>
                <dep>7</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
  <axis>
	<x1-m>0</x1-m>
    <y1-m>-0.61629</y1-m>
    <z1-m>-1.18523</z1-m>
    <x2-m>1</x2-m>
    <y2-m>-0.61629</y2-m>
    <z2-m>-1.18523</z2-m>
  </axis>
  </animation>

</PropertyList>
