<PropertyList>

<path>left-wheelass.ac</path>

<!-- submodels -->


<!-- wheel rotation --> 
 <animation>
  <type>rotate</type>
  <object-name>Radlinks</object-name>
  <object-name>brakeDiskL</object-name>
  <object-name>Cube</object-name>
  <object-name>Cube.001</object-name>
  <object-name>RadStangelinks.001</object-name>
  <object-name>brake</object-name>
  <object-name>block</object-name>
  <property>gear/gear[1]/position-norm</property>
  <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>-90</dep>
            </entry>
            <entry>
                <ind>0.5</ind>
                <dep>-40</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
  <axis>
	<x1-m>0.0</x1-m>
    <y1-m>0</y1-m>
    <z1-m>0</z1-m>
    <x2-m>0.0</x2-m>
    <y2-m>0</y2-m>
    <z2-m>1</z2-m>
  </axis>
  </animation>

 <animation>
  <type>rotate</type>
  <object-name>block</object-name>
  <property>gear/gear[1]/position-norm</property>
  <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>90</dep>
            </entry>
            <entry>
                <ind>0.5</ind>
                <dep>40</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
  <axis>
	<x1-m>0.05107</x1-m>
    <y1-m>0.04306</y1-m>
    <z1-m>0</z1-m>
    <x2-m>0.05107</x2-m>
    <y2-m>0.04306</y2-m>
    <z2-m>1</z2-m>
  </axis>
  </animation>





<!-- spinning wheel -->
<animation>
  <type>spin</type>
  <object-name>Radlinks</object-name>
  <object-name>brakeDiskL</object-name>  
  <condition>
    <equals>
      <property>gear/gear[1]/position-norm</property>
      <value>1</value>
    </equals>
  </condition>
    <property>sim/multiplay/generic/float[12]</property>
  <factor>-20</factor>
  <center>
    <x-m> 0</x-m>
    <y-m>-0.15971</y-m>
    <z-m>-0.14047</z-m>
  </center>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
 </animation>
 
</PropertyList>
