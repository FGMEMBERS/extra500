<PropertyList>

<path>nlg.ac</path>

<!-- submodels -->

  
<!-- wheel steering-->  
<animation>
  <type>rotate</type>
  <object-name>nlg-trunion.lower</object-name>
  <object-name>nlg.piston</object-name>
  <object-name>nlg-fork</object-name>
  <object-name>nlg-axle</object-name>
  <object-name>nlg-wheel</object-name>
  <condition>
    <equals>
      <property>gear/gear[0]/position-norm</property>
      <value>1</value>
    </equals>
  </condition>
  <property>surface-positions/rudder-pos-norm</property>
  <interpolation>
   <entry><ind>-1</ind><dep>30</dep></entry>
   <entry><ind> 0</ind><dep>  0</dep></entry>
   <entry><ind> 1</ind><dep>-30</dep></entry>
  </interpolation>   
  <axis>
    <x1-m>0</x1-m>
    <y1-m>0</y1-m>
    <z1-m>0</z1-m>
    <x2-m>0</x2-m>
    <y2-m>0</y2-m>
    <z2-m>1</z2-m>
  </axis>
</animation>
  
<!-- damper -->
<animation>
  <type>translate</type>
  <object-name>nlg.piston</object-name>
  <object-name>nlg-fork</object-name>
  <object-name>nlg-axle</object-name>
  <object-name>nlg-wheel</object-name>
<property>gear/gear/compression-norm</property>
<interpolation>
            <entry>
                <ind>1</ind>
                <dep>0.2</dep>
            </entry>
            <entry>
                <ind>0.0</ind>
                <dep>0.0</dep>
            </entry>
        </interpolation>
  <axis>
  <x1-m>0</x1-m>
  <y1-m>0</y1-m>
  <z1-m>0</z1-m>
  <x2-m>0</x2-m>
  <y2-m>0</y2-m>
  <z2-m>1</z2-m>
  </axis>
</animation>
 

 <!-- drehende Raeder -->
<animation>
  <type>spin</type>
  <object-name>nlg-wheel</object-name>
  <condition>
    <equals>
      <property>gear/gear[0]/position-norm</property>
      <value>1</value>
    </equals>
  </condition>
  <!--<property>gear/gear[0]/rollspeed-ms</property>-->
  <property>sim/multiplay/generic/float[11]</property>
  <factor>-20</factor>
  <center>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>-0.69666</z-m>
  </center>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
 </animation>
 

</PropertyList>
