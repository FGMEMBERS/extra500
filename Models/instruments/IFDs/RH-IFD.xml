<PropertyList>

<path>RH-IFD.ac</path>

<!--Dimming Test -->
<animation>
        <type>material</type>
        <object-name>RH-IFD.Screen</object-name>
		<condition>
		<equals>
		<property>extra500/panel/Side/Light/Instrument/state</property>
		<value>1</value>
		</equals>
	</condition>
        <emission>
            <red>0.7</red>
            <green>0.7</green>
            <blue>0.7</blue>
            <factor-prop>extra500/panel/Master/Dimming/Instrument/state</factor-prop>
        </emission>
</animation>

</PropertyList>

