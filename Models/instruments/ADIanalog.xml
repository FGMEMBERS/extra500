<PropertyList>

<path>ADIanalog.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>scheibe.vorne</object-name>
		<object-name>scheibe.hinten</object-name>
		<object-name>scheibe.innen</object-name>
		<property>/orientation/roll-deg</property>
		<center>
			<x-m>1</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
<!-- scheibe rutschte raus wenn pitch extrem gross wurde, deshalb anderer loesungsansatz gewaehlt
	<animation>
		<type>translate</type>
		<object-name>scheibe.innen</object-name>
		<property>/orientation/pitch-deg</property>
		<factor>0.0005</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>-->
	
	<animation>
		<type>translate</type>
		<object-name>scheibe.innen</object-name>
		<property>/orientation/pitch-deg</property>
		<interpolation>
        <entry>
           <ind>-30</ind>
           <dep>.015</dep>
        </entry>
            <entry>
                <ind>-20</ind>
                <dep>.01</dep>
            </entry>
            <entry>
                <ind>20</ind>
                <dep>-.01</dep>
            </entry>
		<entry>
            <ind>30</ind>
            <dep>-.015</dep>
        </entry>
        </interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
</PropertyList>

