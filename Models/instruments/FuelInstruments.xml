<!-- Dimming Instruments -->
<animation>
	<type>material</type>
	<object-name>FuelInstruments.AuxRight.Needle</object-name>
	<object-name>FuelInstruments.AuxLeft.Needle</object-name>
	<object-name>FuelInstruments.MainRight.Needle</object-name>
	<object-name>FuelInstruments.MainLeft.Needle</object-name>
	<object-name>FuelInstruments.CollRight.Needle</object-name>
	<object-name>FuelInstruments.CollLeft.Needle</object-name>
	<object-name>FuelInstruments.AuxRight.Scheibe</object-name>
	<object-name>FuelInstruments.AuxLeft.Scheibe</object-name>
	<object-name>FuelInstruments.MainRight.Scheibe</object-name>
	<object-name>FuelInstruments.MainLeft.Scheibe</object-name>
	<object-name>FuelInstruments.CollRight.Scheibe</object-name>
	<object-name>FuelInstruments.CollLeft.Scheibe</object-name>
	<emission>	
		<red>1.0</red>	
		<green>1.0</green>	
		<blue>1.0</blue>
		<factor-prop>/extra500/instrumentation/FuelQuantity/Backlight/state</factor-prop>
	</emission>
</animation>

</PropertyList>



