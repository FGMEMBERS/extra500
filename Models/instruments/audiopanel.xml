<animation>
  <type>rotate</type>
  <object-name>knob.vol.pass</object-name>
  <property>extra500/instrumentation/Audiopanel/knobs/passVol</property>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>160</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-160</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>-0.06380</x1-m>
    <y1-m>-0.003086</y1-m>
    <z1-m>0</z1-m>
    <x2-m>-0.06380</x2-m>
    <y2-m>-0.003086</y2-m>
    <z2-m>1</z2-m>
  </axis>
</animation>

