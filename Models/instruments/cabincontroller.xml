<PropertyList>

<path>cabincontroller.ac</path>


<animation>
  <type>rotate</type>
  <object-name>scale</object-name>
  <object-name>knob</object-name>
  <property>systems/pressurization/airport-alt</property>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>6000</ind>
                <dep>180</dep>
            </entry>
            <entry>
                <ind>9500</ind>
                <dep>270</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.0</x1-m>
    <y1-m>0</y1-m>
    <z1-m>0.0</z1-m>
    <x2-m>0.0</x2-m>
    <y2-m>0</y2-m>
    <z2-m>1.0</z2-m>
  </axis>
</animation>

<animation>
  <type>pick</type>
  <object-name>knob</object-name>
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("Cabin Altitude >");
	]]></script>
    </binding>
  </action>
  <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("Cabin Altitude <");
	]]></script>
    </binding>
  </action>
</animation>

<animation>
  <type>rotate</type>
  <object-name>rateknob</object-name>
  <property>systems/pressurization/cabin-climb-rate-fpm</property>
  <interpolation>
            <entry>
                <ind>1250</ind>
                <dep>-155</dep>
            </entry>
            <entry>
                <ind>500</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>250</ind>
                <dep>155</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>-0.0234</x1-m>
    <y1-m>0.0234</y1-m>
    <z1-m>0.0</z1-m>
    <x2-m>-0.0234</x2-m>
    <y2-m>0.0234</y2-m>
    <z2-m>1.0</z2-m>
  </axis>
</animation>

<animation>
  <type>pick</type>
  <object-name>rateknob</object-name>
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("Cabin Rate >");
	]]></script>
    </binding>
  </action>
  <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("Cabin Rate <");
	]]></script>
    </binding>
  </action>
</animation>

<animation>
	<type>material</type>
	<object-name>scale</object-name>
	<emission>	
		<red>0.1</red>	
		<green>0.3</green>	
		<blue>1.0</blue>
		<factor-prop>extra500/instrumentation/CabinController/Backlight/state</factor-prop>
	</emission>
</animation>


</PropertyList>
