<PropertyList>

<path>PropAmmeter.ac</path>

<!--Needle-->
<!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
<!-- I don't know which property to use. for testing I use rudder-pos-norm -->
<!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
<animation>
  <type>rotate</type>
  <object-name>PropAmmeter.Needle</object-name>
  <property>/surface-positions/rudder-pos-norm</property>
		<interpolation>
            <entry>
                <ind>-1</ind>
                <dep>-135</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>135</dep>
            </entry>
        </interpolation>
  <axis>
  <x1-m>1</x1-m>
  <y1-m>0</y1-m>
  <z1-m>0</z1-m>
  <x2-m>-1</x2-m>
  <y2-m>0</y2-m>
  <z2-m>0</z2-m>
  </axis>
</animation>

</PropertyList>


