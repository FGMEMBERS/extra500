	<property>/extra500/system/flap/Switch/state</property> 
	<interpolation>
		<entry>
			<ind>-1</ind>
			<dep>-19</dep>
		</entry>
		<entry>
			<ind>1</ind>
			<dep>19</dep>
		</entry>
	</interpolation>
	<axis>
		<x1-m>-0.03984</x1-m>
		<y1-m>1</y1-m>
		<z1-m>-0.02874</z1-m>
		<x2-m>-0.03984</x2-m>
		<y2-m>-1</y2-m>
		<z2-m>-0.02874</z2-m>
	</axis>
</animation>

