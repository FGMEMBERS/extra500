<animation>
	<type>rotate</type>
	<object-name>GearLever</object-name>
	<property>/extra500/system/gear/MainGearSwitch/state</property> 
	<interpolation>
		<entry>
			<ind>0</ind>
			<dep>-15</dep>
		</entry>
		<entry>
			<ind>1</ind>
			<dep>15</dep>
		</entry>
	</interpolation>
	<axis>
		<x1-m>-0.02090</x1-m>
		<y1-m>-1</y1-m>
		<z1-m>-0.02846</z1-m>
		<x2-m>-0.02090</x2-m>
		<y2-m>1</y2-m>
		<z2-m>-0.02846</z2-m>
	</axis>
</animation>

