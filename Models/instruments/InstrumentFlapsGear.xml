</animation>

<!--Dimming Test -->
<animation>
        <type>material</type>
        <object-name>GearPanel</object-name>
        <object-name>FlapPanel</object-name>

		<condition>
		<equals>
		<property>extra500/panel/Side/Light/Instrument/state</property>
		<value>1</value>
		</equals>
	</condition>
        <emission>
            <red>0.4</red>
            <green>0.4</green>
            <blue>0.4</blue>
            <factor-prop>extra500/panel/Master/Dimming/Instrument/state</factor-prop>
        </emission>
</animation>

