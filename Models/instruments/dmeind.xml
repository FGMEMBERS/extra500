<PropertyList>

<path>dmeind.ac</path>
<!--Dimming -->
<animation>
	<type>material</type>
	<object-name>nm.100</object-name>
	<object-name>nm.010</object-name>
	<object-name>nm.001</object-name>
	<object-name>nm</object-name>
	<object-name>1</object-name>
	<object-name>kt.100</object-name>
	<object-name>kt.010</object-name>
	<object-name>kt.001</object-name>
	<object-name>kt</object-name>
	<object-name>min.10</object-name>
	<object-name>min.01</object-name>
	<object-name>min</object-name>
	<emission>	
		<red>1.0</red>	
		<green>1.0</green>	
		<blue>1.0</blue>
		<factor-prop>/extra500/instrumentation/dmeInd/Backlight/state</factor-prop>
	</emission>
</animation>
<!--DME ind-->
	<animation>
		<!-- Power on/off -->
		<type>select</type>
		<object-name>nm.100</object-name>
		<object-name>nm.010</object-name>
		<object-name>nm.001</object-name>
		<object-name>nm</object-name>
		<object-name>1</object-name>
		<object-name>kt.100</object-name>
		<object-name>kt.010</object-name>
		<object-name>kt.001</object-name>
		<object-name>kt</object-name>
		<object-name>min.10</object-name>
		<object-name>min.01</object-name>
		<object-name>min</object-name>
		<condition>
			<greater-than>
				<property>extra500/instrumentation/dmeInd/state</property>
				<value>0</value>
			</greater-than>	
		</condition>
	</animation>
<!--NM-->
	<animation>
		<type>textranslate</type>
		<object-name>nm.001</object-name>
		<property>/instrumentation/dme/indicated-distance-nm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>nm.010</object-name>
		<property>/instrumentation/dme/indicated-distance-nm</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>nm.100</object-name>
		<property>/instrumentation/dme/indicated-distance-nm</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>nm.010</object-name>
		<condition>
			<greater-than-equals>
				<property>/instrumentation/dme/indicated-distance-nm</property>
				<value>10</value>
			</greater-than-equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>nm.100</object-name>
		<condition>
			<greater-than-equals>
				<property>/instrumentation/dme/indicated-distance-nm</property>
				<value>100</value>
			</greater-than-equals>
		</condition>
	</animation>

<!--speed-->
	<animation>
		<type>textranslate</type>
		<object-name>kt.001</object-name>
		<property>/instrumentation/dme/indicated-ground-speed-kt</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>kt.010</object-name>
		<property>/instrumentation/dme/indicated-ground-speed-kt</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>kt.100</object-name>
		<property>/instrumentation/dme/indicated-ground-speed-kt</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>kt.010</object-name>
		<condition>
			<greater-than-equals>
				<property>/instrumentation/dme/indicated-ground-speed-kt</property>
				<value>10</value>
			</greater-than-equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>kt.100</object-name>
		<condition>
			<greater-than-equals>
				<property>/instrumentation/dme/indicated-ground-speed-kt</property>
				<value>100</value>
			</greater-than-equals>
		</condition>
	</animation>

<!--time-->
	<animation>
		<type>textranslate</type>
		<object-name>min.01</object-name>
		<property>/instrumentation/dme/indicated-time-min-clp</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>min.10</object-name>
		<property>/instrumentation/dme/indicated-time-min-clp</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>min.10</object-name>
		<condition>
			<greater-than-equals>
				<property>/instrumentation/dme/indicated-time-min-clp</property>
				<value>10</value>
			</greater-than-equals>
		</condition>
	</animation>

</PropertyList>

