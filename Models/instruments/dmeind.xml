<!--DME ind-->
	<animation>
		<!-- Power on/off -->
		<type>select</type>
		<object-name>nm</object-name>
		<object-name>1</object-name>
		<object-name>kt</object-name>
		<object-name>min</object-name>
		<condition>
			<greater-than>
				<property>extra500/instrumentation/dmeInd/state</property>
				<value>0</value>
			</greater-than>	
		</condition>
	</animation>

	<animation>
		<!-- Hold -->
		<type>select</type>
		<object-name>H</object-name>
		<condition>
			<greater-than>
				<property>extra500/instrumentation/dmeInd/state</property>
				<value>0</value>
			</greater-than>	
			<equals>
				<property>extra500/instrumentation/dmeSwitch/pressed</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

