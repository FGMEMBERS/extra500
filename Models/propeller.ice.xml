<PropertyList>
	
	<path>propeller.ice.ac</path> 
	
	<!-- blade ice -->
	<animation>
		<object-name>ICE.Propeller</object-name>
		<type>select</type>
		<condition>
			<and>
				<greater-than>
					<property>/environment/aircraft-effects/frost-level-Propeller</property>
					<value>0</value>
				</greater-than>
				
				<less-than>
					<property>sim/multiplay/generic/int[12]</property>
					<value>700</value>
				</less-than>
				<equals>
					<property>sim/multiplay/generic/int[14]</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>ICE.Propeller</object-name>
		<property>/environment/aircraft-effects/frost-level-Propeller</property>
		<factor>-0.025</factor>
		<offset-m>0.0001</offset-m>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
