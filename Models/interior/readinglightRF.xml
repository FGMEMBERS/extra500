<PropertyList>

<path>readinglight.ac</path>

      <animation>
            <type>light</type>
            <light-type>point</light-type>
            <name>LightSrc103</name>
            <object-name>light.cone</object-name>
            <nopreview/>
            <position>
			<x>0.82430</x>
			<y>0.65431</y>	
			<z>-0.46784</z>
            </position>
            <ambient>
                  <r>0.9</r>
                  <g>0.9</g>
                  <b>0.9</b>
                  <a>1.0</a>
            </ambient>
            <diffuse>
                  <r>0.9</r>
                  <g>0.9</g>
                  <b>0.9</b>
                  <a>1.0</a>
            </diffuse>
            <specular>
                  <r>0.9</r>
                  <g>0.9</g>
                  <b>0.9</b>
                  <a>1.0</a>
            </specular>
            <attenuation>
                  <c>5.0</c>
                  <l>0.2</l>
                  <q>0.005</q>
            </attenuation>
            <near-m>0.1</near-m>
            <far-m>5</far-m>
      </animation>

      <animation>
            <type>select</type>
            <object-name>LightSrc103</object-name>
            <condition>
                  <and>
                        <property>/sim/rendering/rembrandt/enabled</property>
                        <greater-than>
                              <property>/sim/rendering/shaders/lights</property>
                              <value>0</value>
                        </greater-than>
           			<greater-than>
            			<property>/extra500/panel/CircuitBreaker/BankB/CabinLight/voltOut</property>
                  		<value>10</value>
            		</greater-than>
       			<property>/extra500/interior/readinglightRF/pressed</property>
       			<property>/extra500/panel/Side/Light/Cabin/state</property>
                  </and>
            </condition>
      </animation>

  <animation>
    <type>material</type>
    <object-name>light.face</object-name>
    <condition>
            <greater-than>
            	<property>/extra500/panel/CircuitBreaker/BankB/CabinLight/voltOut</property>
                  <value>10</value>
            </greater-than>
       	<property>/extra500/interior/readinglightRF/pressed</property>
       	<property>/extra500/panel/Side/Light/Cabin/state</property>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

<animation>
  <type>rotate</type>
  <object-name>eyeball</object-name>
  <object-name>light.face</object-name>
  <object-name>light.cone</object-name>
  <property>/extra500/interior/readinglightRF/updown</property>
  <axis>
    <x1-m>0</x1-m>
    <y1-m>0</y1-m>
    <z1-m>0.006086</z1-m>
    <x2-m>1</x2-m>
    <y2-m>0</y2-m>
    <z2-m>0.006086</z2-m>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>eyeball</object-name>
  <object-name>light.face</object-name>
  <object-name>light.cone</object-name>
  <property>/extra500/interior/readinglightRF/leftright</property>
  <axis>
    <x1-m>0</x1-m>
    <y1-m>0</y1-m>
    <z1-m>0.006086</z1-m>
    <x2-m>0</x2-m>
    <y2-m>1</y2-m>
    <z2-m>0.006086</z2-m>
  </axis>
</animation>

<!--pick animations-->
<animation>
  <type>pick</type>
  <object-name>base.upper</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("readinglightRF up");
	]]></script>
    </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>base.lower</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("readinglightRF down");
	]]></script>
    </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>base.left</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("readinglightRF left");
	]]></script>
    </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>base.right</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("readinglightRF right");
	]]></script>
    </binding>
  </action>
</animation>

</PropertyList>

