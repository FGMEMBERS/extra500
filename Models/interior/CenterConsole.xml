<!-- PowerLever -->
<animation>
  <type>rotate</type>
  <object-name>PowerLever</object-name>
  <object-name>gear warn mute switch</object-name>
  <property>controls/engines/engine/throttle</property>
  <condition>
    <equals>
      <property>controls/engines/engine/reverser</property>
      <value>1</value>
    </equals>
  </condition>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-5.4</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-41.7</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>-1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>PowerLever</object-name>
  <object-name>gear warn mute switch</object-name>
  <property>controls/engines/engine/throttle</property>
  <condition>
    <equals>
      <property>controls/engines/engine/reverser</property>
      <value>0</value>
    </equals>
  </condition>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-5.4</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>40.5</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>-1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>PowerLever</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					UI.click("Engine reverser");
				]]>
			</script>
		</binding>
	</action>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		setprop("/controls/engines/engine/throttle",getprop("/controls/engines/engine/throttle")+.0025);
	]]></script>
    </binding>
  </action>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		setprop("/controls/engines/engine/throttle",getprop("/controls/engines/engine/throttle")-.0025);
	]]></script>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>PowerLever</object-name>
  <object-name>gear warn mute switch</object-name>
  <property>controls/engines/engine/reverser</property>
  <factor>0.02</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
</animation>

<!-- ConditionLever  
/controls/engines/engine[0]/condition-lever-norm is controlled by: 	
		/extra500/engine/cutoff (press: s)
		/controls/engines/engine[0]/propeller-pitch (press: n/N)
in Systems/extra500-system-indication.xml-->
<animation>
  <type>rotate</type>
  <object-name>ConditionLever</object-name>
  <property>/controls/engines/engine[0]/condition-lever-norm</property>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>22.7</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-18.2</dep>
            </entry>
        </interpolation>
  <axis>
    <x1-m>0.17205</x1-m>
    <y1-m>-1</y1-m>
    <z1-m>-0.03982</z1-m>
    <x2-m>0.17205</x2-m>
    <y2-m>1</y2-m>
    <z2-m>-0.03982</z2-m>
  </axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>ConditionLever</object-name>
  <property>/controls/engines/engine[0]/condition-lever-norm</property>
  <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0.01</ind>
                <dep>0.02</dep>
            </entry>
            <entry>
                <ind>0.48</ind>
                <dep>0.02</dep>
            </entry>
            <entry>
                <ind>0.49</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0.0</dep>
            </entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>ConditionLever</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
				<![CDATA[
					UI.click("Engine cutoff");
				]]>
			</script>
		</binding>
	</action>
