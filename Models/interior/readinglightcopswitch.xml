<PropertyList>

<path>../instruments/panelventswitch.ac</path>

 	<animation>
  		<type>translate</type>
		<object-name>switch</object-name>
		<property>extra500/interior/readinglightcop/pressed</property>
  		<factor>0.0011</factor>
  		<axis>
   			<x>-1</x>
   			<y>0</y>
   			<z>0</z>
  		</axis>
 	</animation>

<!--pick animations-->
<animation>
  <type>pick</type>
  <object-name>switch</object-name>
  <object-name>face</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script><![CDATA[
		UI.click("readinglightswitchcop on/off");
	]]></script>
    </binding>
  </action>
</animation>


</PropertyList>

