<PropertyList>
	
	<path>ice.stab.ac</path> 
	<!---->
	<animation>
		<object-name>ICE.VStab</object-name>
		<type>select</type>
		<condition>
			<greater-than>
				<property>/environment/aircraft-effects/frost-level-VStab</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<object-name>ICE.HStab.LEFT</object-name>
		<type>select</type>
		<condition>
			<greater-than>
				<property>/environment/aircraft-effects/frost-level-HStabLeft</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<object-name>ICE.HStab.RIGHT</object-name>
		<type>select</type>
		<condition>
			<greater-than>
				<property>/environment/aircraft-effects/frost-level-HStabRight</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
	
	<effect>
		<inherits-from>Aircraft/extra500/Models/Effects/extra500-ice</inherits-from>
		<object-name>ICE.VStab</object-name>
		<parameters>
			<frost-level><use>/environment/aircraft-effects/frost-level-VStab</use></frost-level>
		</parameters>
	</effect>
	<effect>
		<inherits-from>Aircraft/extra500/Models/Effects/extra500-ice</inherits-from>
		<object-name>ICE.HStab.LEFT</object-name>
		<parameters>
			<frost-level><use>/environment/aircraft-effects/frost-level-HStabLeft</use></frost-level>
		</parameters>
	</effect>
	<effect>
		<inherits-from>Aircraft/extra500/Models/Effects/extra500-ice</inherits-from>
		<object-name>ICE.HStab.RIGHT</object-name>
		<parameters>
			<frost-level><use>/environment/aircraft-effects/frost-level-HStabRight</use></frost-level>
		</parameters>
	</effect>
	
	
</PropertyList>