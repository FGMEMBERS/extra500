<?xml version="1.0"?>

<PropertyList>

<path>extra500_IFD.ac</path>

<animation>
  <type>texmultiple</type>
  <object-name>Oben</object-name>
  <transform>
    <property>/orientation/pitch-deg</property>
    <subtype>textranslate</subtype>
    <factor>0.0045</factor>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
  </transform>
  <transform>
    <property>/orientation/roll-deg</property>
    <subtype>texrotate</subtype>
    <center>
     <x>0.50</x>
     <y>0.50</y>
   </center>
    <axis>
     <x>0</x>
     <y>0</y>
     <z>-1</z>
   </axis>
  </transform>
 </animation>

 	<animation>
		<type>textranslate</type>
		<object-name>IAS</object-name>
		<property>/velocities/airspeed-kt</property>
		<factor>.0022</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
<!--Dimming Test -->
<animation>
        <type>material</type>
        <object-name>Oben</object-name>
        <object-name>IAS</object-name>
		<condition>
		<equals>
		<property>extra500/SidePanel/Light/Instrument/state</property>
		<value>1</value>
		</equals>
	</condition>
        <emission>
            <red>.7</red>
            <green>.7</green>
            <blue>.7</blue>
            <factor-prop>extra500/MasterPanel/Dimming/Instrument/state</factor-prop>
        </emission>
</animation>

</PropertyList>

