<!-- Kompass -->
<animation>
	<type>texrotate</type>
	<object-name>Kompass</object-name>
	<property>/orientation/heading-deg</property>
	<factor>1</factor>
	<axis>
		<x>0</x>
		<y>0</y>
		<z>-1</z>
	</axis>
	<center>
		<x>0.5</x>
		<y>0.5</y>
	</center>
</animation>

<!--Dimming Test -->
<animation>
        <type>material</type>
        <object-name>Oben</object-name>
        <object-name>IAS</object-name>
		<object-name>IAS.001er</object-name>
		<object-name>IAS.010er</object-name>
		<object-name>IAS.100er</object-name>
		<object-name>Heading.001er</object-name>
		<object-name>Heading.010er</object-name>
		<object-name>Heading.100er</object-name>
		<object-name>Altitude.10000er</object-name>
		<object-name>Altitude.01000er</object-name>
		<object-name>Altitude.00100er</object-name>
		<object-name>Altitude.00011er</object-name>
		<object-name>Kompass</object-name>
		<condition>
		<equals>
		<property>extra500/SidePanel/Light/Instrument/state</property>
		<value>1</value>
		</equals>
	</condition>
        <emission>
            <red>.7</red>
            <green>.7</green>
            <blue>.7</blue>
            <factor-prop>extra500/MasterPanel/Dimming/Instrument/state</factor-prop>
        </emission>
</animation>

</PropertyList>

