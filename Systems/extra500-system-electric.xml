						<pow>	
							<max>			
								<property>/extra500/panel/CircuitBreaker/BankB/CabinLight/voltOut</property>
								<value>1</value>
							</max>
							<value>-1</value>
						</pow>				
					</product>
					<product>
						<property>/extra500/interior/readinglightLA/pressed</property>
						<value>1.0</value>
						<pow>	
